<div class="container">
  <div class="row">
    <div class="hero">
      <h1>Open Sessions</h1>
      <p>Register to conduct courses/modules for these sessions: </p>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @open_sessions.each do |programme_session| %>
            <tr>
              <td><%= programme_session.name %></td>
              <td><%= programme_session.start_date %></td>
              <td><%= programme_session.end_date %></td>
              <td><%= link_to 'Show', programme_session %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
