<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12">
      <%= form_for(@profile) do |f| %>
        <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
			<ul class="nav nav-tabs" id="myTabs" role="tablist"> 
				<li role="presentation" class="active">
					<a href="#profile" id="profile-tab" role="tab" data-toggle="tab" aria-controls="profile" aria-expanded="true">Profile</a>
				</li> 
				<li role="presentation" class=""><a href="#background" role="tab" id="background-tab" data-toggle="tab" aria-controls="background" aria-expanded="false">Background</a>
				</li> 
			</ul> 
        <div class="tab-content" id="tabContent"> 
          <div class="tab-pane fade active in" role="tabpanel" id="profile" aria-labelledby="profile-tab"> 
						<div class="row">
              <div class="col-md-8 col-sm-12">
                <table class="table">
                  <tbody>
                    <tr>
                      <th>
                        <%= label nil, :salutation %><br>
                      </th>
                      <td>
                        <%= f.select :salutation, Profile.salutations, {prompt: "Salutation"}, class: "selectpicker", id: "profile_salutation" %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :full_name %><br>
                      </th>
                      <td>
                        <%= f.text_field :full_name , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, "Staff ID" %><br>
                      </th>
                      <td>
                        <%= f.text_field :staff_id , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :designation %><br>
                      </th>
                      <td>
                        <%= f.text_field :designation , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :faculty %><br>
                      </th>
                      <td>
                        <%= f.select :faculty_id, Faculty.all.map{|fac| [fac.name, fac.id]}, {prompt: "Faculty"}, class: "selectpicker", id: "profile_faculty" %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :office_telephone_number %><br>
                      </th>
                      <td>
                        <%= f.telephone_field :office_telephone_number , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :mobile_telephone_number %><br>
                      </th>
                      <td>
                        <%= f.telephone_field :mobile_telephone_number , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :employment_type %><br>
                      </th>
                      <td>
                        <%= f.text_field :employment_type , class: "form-control"%>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
						</div>
          </div> 
          <div class="tab-pane fade" role="tabpanel" id="background" aria-labelledby="background-tab">
						<div class="row">
              <div class="col-md-8 col-sm-12">
                <table class="table">
                  <tbody>
                    <tr>
                      <th>
                        <%= label nil, :qualification %><br>
                      </th>
                      <td>
                        <%= f.text_area :qualification, class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :field_of_knowledge %><br>
                      </th>
                      <td>
                        <%= f.text_area :field_of_knowledge , class: "form-control"%>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :technical_skills %><br>
                      </th>
                      <td>
                        <%= f.text_area :technical_skills, class: "form-control" %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :personal_skills %><br>
                      </th>
                      <td>
                        <%= f.text_field :personal_skills , class: "form-control"%>
                      </td>
                    </tr>
                </table>
              </div>
            </div>
          </div> 
        </div> 
        <br/>
        <div class="actions">
          <%= f.submit "Update Profile", class: 'btn btn-lg btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
      <script>
        $(document).ready(function() {
          setSelectpicker();
        });
      </script>
