<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-12">
			<ul class="nav nav-tabs" id="myTabs" role="tablist"> 
				<li role="presentation" class="active">
					<a href="#profile" id="profile-tab" role="tab" data-toggle="tab" aria-controls="profile" aria-expanded="true">Profile</a>
				</li> 
				<li role="presentation" class=""><a href="#background" role="tab" id="background-tab" data-toggle="tab" aria-controls="background" aria-expanded="false">Background</a>
				</li> 
			</ul> 
        <div class="tab-content" id="tabContent"> 
          <div class="tab-pane fade active in" role="tabpanel" id="profile" aria-labelledby="profile-tab"> 
						<div class="row">
              <div class="col-md-8 col-sm-12">
                <table class="table">
                  <tbody>
                    <tr>
                      <th>
                        <%= label nil, :salutation %><br>
                      </th>
                      <td>
                        <%= @profile.salutation %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :full_name %><br>
                      </th>
                      <td>
                        <%= @profile.full_name %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, "Staff ID" %><br>
                      </th>
                      <td>
                        <%= @profile.staff_id %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :designation %><br>
                      </th>
                      <td>
                        <%= @profile.designation %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :faculty %><br>
                      </th>
                      <td>
                        <%= @profile.faculty.name %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :office_telephone_number %><br>
                      </th>
                      <td>
                        <%= @profile.office_telephone_number %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :mobile_telephone_number %><br>
                      </th>
                      <td>
                        <%= @profile.mobile_telephone_number %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :employment_type %><br>
                      </th>
                      <td>
                        <%= @profile.employment_type %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
						</div>
          </div> 
          <div class="tab-pane fade" role="tabpanel" id="background" aria-labelledby="background-tab">
						<div class="row">
              <div class="col-md-8 col-sm-12">
                <table class="table">
                  <tbody>
                    <tr>
                      <th>
                        <%= label nil, :qualification %><br>
                      </th>
                      <td>
                        <%= @profile.qualification.gsub(/\n/, '<br/>').html_safe %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :field_of_knowledge %><br>
                      </th>
                      <td>
                        <%= @profile.field_of_knowledge.gsub(/\n/, '<br/>').html_safe %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :technical_skills %><br>
                      </th>
                      <td>
                        <%= @profile.technical_skills.gsub(/\n/, '<br/>').html_safe %>
                      </td>
                    </tr>
                    <tr>
                      <th>
                        <%= label nil, :personal_skills %><br>
                      </th>
                      <td>
                        <%= @profile.personal_skills.gsub(/\n/, '<br/>').html_safe %>
                      </td>
                    </tr>
                </table>
              </div>
            </div>
          </div> 
        </div> 
        <br/>
        <div class="actions">
          <%= link_to 'Edit', edit_profile_path(@user), class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
  </div>
</div>
      <script>
        $(document).ready(function() {
          setSelectpicker();
        });
      </script>
